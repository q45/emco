

<div class="row">
		
	<div class="large-5 large-centered columns">
	<h2>Contact Us</h2>
		<%= form_for(@contact) do |c| %>
			<%= c.label :first_name %>
			<%= c.text_field :first_name %>

			<%= c.label :last_name %>
			<%= c.text_field :last_name %>

			<%= c.label :email %>
			<%= c.text_field :email %>

			<%= c.label :phone_number %>
			<%= c.text_field :phone_number %>

			<%= c.submit 'Contact Us' %>

		<% end %>
	</div>
</div>